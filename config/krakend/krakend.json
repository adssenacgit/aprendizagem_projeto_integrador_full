{
    "$schema": "https://www.krakend.io/schema/v3.json",
    "version": 3,
    "name": "KrakenD Enterprise API Gateway",
    "port": 8080,
    "timeout": "3000ms",
    "cache_ttl": "300s",
    "endpoints": [
        {
            "@comment": "Endpoint de autenticacao, retorna o JWT",
            "endpoint": "/login",
            "method": "POST",
            "backend": [
                {
                    "host": ["http://autenticacao:8080"],
                    "url_pattern": "/v1/login"
                }
            ]
        },
        {
            "@comment": "Senac coin GET endpoints",
            "endpoint": "/senaccoin/{action}/{id}",
            "backend": [
                {
                    "host": ["http://grupo7:8080"],
                    "url_pattern": "/senaccoin/{action}/{id}"
                }
            ],
            "extra_config": {
                "auth/validator": {
                  "alg": "RS256",
                  "roles_key": "roles",
                  "roles": ["a", "b"],
                  "jwk_url": "http://autenticacao:8080/v1/.well-known/jwks",
                  "disable_jwk_security": true,
                  "cache": true,
                  "cookie_key": "cookie_jwt"
                }
            }
        },
        {
            "@comment": "Senac coin POST endpoint",
            "endpoint": "/senaccoin",
            "method": "POST",
            "backend": [
                {
                    "host": ["http://grupo7:8080"],
                    "url_pattern": "/senaccoin"
                }
            ]
        }
    ],
    "extra_config": {
        "telemetry/metrics": {
          "collection_time": "30s",
          "listen_address": ":8090"
        },
        "telemetry/influx": {
          "address": "http://influxdb:8086",
          "ttl": "25s",
          "buffer_size": 100,
          "username": "krakend-dev",
          "password": "pas5w0rd"
        },
        "telemetry/logging": {
          "level": "DEBUG",
          "prefix": "[KRAKEND]",
          "syslog": false,
          "stdout": true
        },
        "security/cors": {
            "allow_origins": ["*"],
            "allow_methods": ["POST", "GET", "PUT", "DELETE", "PATCH"],
            "allow_headers": ["Origin", "Authorization", "Content-Type"],
            "expose_headers": ["Content-Length"],
            "max_age": "12h"
        }
    }
  
}